# Production Environment Configuration
# Copy this file to .env for production deployment
# IMPORTANT: Replace all placeholder values with actual production values

# Database Configuration (Production)
DB_HOST=your-production-db-host.com
DB_PORT=5432
DB_NAME=roombooking_prod
DB_USER=prod_user
DB_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD

# JWT Configuration (Production)
# CRITICAL: Generate a strong, random secret key for production
# You can generate one using: openssl rand -base64 64
JWT_SECRET=CHANGE_THIS_TO_STRONG_RANDOM_SECRET_KEY_AT_LEAST_32_CHARACTERS
JWT_ISSUER=RoomBookingAPI
JWT_AUDIENCE=RoomBookingClient
JWT_EXPIRATION_MINUTES=60

# CORS Configuration (Production)
# Add your production frontend URLs
CORS_ORIGINS=https://your-production-domain.com,https://www.your-production-domain.com

# Swagger Configuration (Production)
# Set to false to disable Swagger in production for security
ENABLE_SWAGGER=false

# Application Configuration (Production)
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=http://+:5000
